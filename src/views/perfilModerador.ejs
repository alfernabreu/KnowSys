<%- include('includes/head') %>
  <%- include('includes/nav') %>
    <%- include('includes/botaoVoltar') %>


      <style>
        .container img {
          background-color: #3CDDDD;
          border-radius: 15px;
          padding: 10px;
          margin: 0 15px 0 0;
        }

        .container #titulo {
          display: flex;
          align-items: center;

        }
      </style>


      <div class="container">
        <div class="row">
          <div class="col-lg-2"></div>

          <div class="col-lg-8 my-3">

            <div class="m-5" id="titulo">
              <img class="img-thumbnail" src="/assets/img/moderator (1).png" alt="">
              <h2>Informações do(a) Moderador(a)</h2>
            </div>


            <%- include('includes/messages') %>

              <% if(user._id) { %>
                <form class="row g-3 m-2d-flex justify-content-end" action="/editarUsuario/edit/<%= user._id %>" method="POST">
                  <% } else { %>
                    <form action="/cadastro/register" method="POST">
                      <% } %>
                        <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                        <input type="hidden" name="tipoUsuario" value="usuario">
                        <input type="hidden" name="inputNomeEmpresa" value=<%=user.inputNomeEmpresa %>>
                        <input type="hidden" name="inputCnpjEmpresa" value=<%=user.inputCnpjEmpresa %>>
                        <input type="hidden" name="inputEmailEmpresa" value=<%=user.inputEmailEmpresa %>>

                        <div class="row">
                          <div class="col-12 form-group">
                            <label>Nome</label>
                            <input value="<%= user.inputNome %>" type="text" class="form-control" name="inputNome">
                          </div>
                          <div class="col-md-6 form-group">
                            <label>Matrícula</label>
                            <input value="<%= user.inputMatricula %>" type="text" class="form-control"
                              name="inputMatricula">
                          </div>
                          <div class="col-md-6 form-group">
                            <label>Email</label>
                            <input value="<%= user.email %>" type="email" class="form-control" name="email">
                          </div>
                          <div class="col-md-6 form-group">
                            <label>Senha</label>
                            <input type="password" class="form-control" name="password">
                          </div>
                          <div class="col-md-6 form-group">
                            <label>Confirme a senha</label>
                            <input type="password" class="form-control" name="inputConfirmacaoSenhaModerador">
                          </div>
                        </div>
                        <div>
                          <button type="submit" class="btn btn-success g-3 m-2"><svg xmlns="http://www.w3.org/2000/svg"
                              width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                              <path
                                d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z" />
                            </svg> Salvar</button>
                          <button type="submit" class="btn btn-danger g-3 m-2" action="/home/index"><svg
                              xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                              class="bi bi-x" viewBox="0 0 16 16">
                              <path
                                d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                            </svg> Cancelar</button>
                        </div>
                    </form>

          </div>
          <div class="col-lg-2"></div>
        </div>
      </div>

      <%- include('includes/footer') %>