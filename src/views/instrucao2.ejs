<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <%- include('includes/botaoVoltar') %>

            <style>

                .container-instrucao img {

                    background-color: #3CDDDD;
                    border-radius: 15px;
                    padding: 10px;
                    margin: 0 10px 0 0;

                }
            </style>

            <div class="px-4 py-20 my-5 ">


                <section class="container-instrucao">

                    <div class="d-flex col-lg-8 mx-auto my-4 ">
                        <img src="/assets/img/add (2) 1.png" alt="">
                        <h1 class="card-title my-2">
                            <%= instrucao.categoriaInstrucao %>
                        </h1>
                    </div>

                    <%- include('includes/messages'); %>

                        <% if(instrucao._id) { %>
                            <div class="col-lg-8 mx-auto">

                                <form class="formulario-novaInstrucao" id="formulario-novaInstrucao"
                                    action="/novaInstrucao/edit/<%= instrucao._id %>" method="POST">
                                    <% } else { %>
                                        <form class="formulario-novaInstrucao" id="formulario-novaInstrucao"
                                            action="/novaInstrucao/register" method="POST">
                                            <% } %>

                                                <input type="hidden" name="_csrf" value=<%=csrfToken %>>

                                                <h2 class="card-subtitle mb-2 text-body-secondary tema">
                                                    <%= instrucao.temaInstrucao %>
                                                </h2>
                                                <p class="card-text descricao-instrucao my-5">
                                                    <%= instrucao.descricaoInstrucao %>
                                                </p>

                                                <% if(user.tipoUsuario==="administrador" ) { %>
                                                    <td><a class="btn btn-primary"
                                                            href="/novaInstrucao/index/<%= instrucao._id %>">Editar</a>
                                                    </td>
                                                    <td><a class="btn btn-outline-secondary"
                                                            href="/novaInstrucao/delete/<%= instrucao._id %>">Excluir</a>
                                                    </td>
                                                    <% }%>
                                        </form>
                            </div>


                </section>
            </div>
            <%- include('includes/footer') %>