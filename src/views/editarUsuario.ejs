<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Usuários</h1>
      <p class="text-center lead">Crie ou edite os usuário abaixo.</p>

      <%- include('includes/messages') %>

      <% if(usuario._id) { %>
      <form action="/editarUsuario/edit/<%= usuario._id %>" method="POST">
      <% } else { %>
      <form action="/editarUsuario/register" method="POST">
      <% } %>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <input type="hidden" name="tipoUsuario" value="usuario">
        <div class="form-group">
          <label>Nome</label>
          <input value="<%= usuario.nome %>" type="text" class="form-control" name="nome">
        </div>
        <div class="form-group">
          <label>Matrícula</label>
          <input value="<%= usuario.matricula %>" type="text" class="form-control" name="matricula">
        </div>
        <div class="form-group">
          <label>Email</label>
          <input value="<%= usuario.email %>" type="email" class="form-control" name="email">
        </div>
        <div class="form-group">
          <label>Senha</label>
          <input value="<%= usuario.senha %>" type="password" class="form-control" name="senha">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>


    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
